<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/stroke" >

    <RelativeLayout
        android:layout_width="match_parent" 
        android:layout_height="wrap_content">
        
	    <com.example.classes.RoundedCornersGaganImg
	        android:id="@+id/video_thumbnail"
	        android:layout_width="match_parent"
	        android:layout_height="140dp"
	        android:scaleType="fitXY"
	        android:layout_margin="1dp"
	        android:src="@drawable/loading_image_large" />

	    <TextView
	        android:id="@+id/duration"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/video_thumbnail"
	        android:layout_alignRight="@+id/video_thumbnail"
	        android:layout_marginBottom="10dp"
	        android:layout_marginRight="10dp"
	        android:text="00:15"
	        android:padding="5dp"
	        android:textColor="@color/White"
	        android:background="@drawable/white_stroke" />
    
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/click_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

       
            <com.example.classes.RoundedCornersGaganImg
                android:id="@+id/user_pic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/loading_image" />
       

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jimmy"
                android:textColor="#4f606a"
                android:textSize="@dimen/text_size_14"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:scrollHorizontally="true" 
                android:marqueeRepeatLimit="marquee_forever"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="46 min ago"
                android:textSize="10sp" >
            </TextView>
        </LinearLayout>

         <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/comment_icon" >
                </ImageView>

                <TextView
                    android:id="@+id/comments_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="10sp" >
                </TextView>
            </LinearLayout>
            
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/name_texsaxawfawct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/clap" >
            </ImageView>

            <TextView
                android:id="@+id/likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="10sp" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

