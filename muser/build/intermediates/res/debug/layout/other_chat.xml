<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7dp"
    android:orientation="horizontal"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/FrameLayoutotherChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        android:background="@drawable/chat_right_popup"
        android:orientation="vertical"
        android:padding="1dp" >

        <FrameLayout
            android:id="@+id/FrameLayoutIMAGE_Other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="1dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="1dp"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/imgV_otherChatImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:paddingRight="5dp"
                android:layout_marginTop="5dp" />
        </FrameLayout>

        <com.rockerhieu.emojicon.EmojiconTextView
            android:id="@+id/txtV_otherChatmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:textColorLink="@android:color/black"
            android:paddingBottom="1dp"
            android:paddingLeft="5dp"
            android:paddingRight="20dp"
            android:paddingTop="1dp"
            android:text="Msg"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtV_otherChatDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="2dp"
            android:paddingRight="20dp"
            android:text="Time"
            android:textSize="8sp"
            android:textStyle="italic" 
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:orientation="vertical" >

         <com.example.classes.RoundedCornersGaganImg
            android:id="@+id/fb_otherChat"
            android:layout_width="35dp"
            android:layout_height="35dp"
            
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY" >
        </com.example.classes.RoundedCornersGaganImg>
    </LinearLayout>

</LinearLayout><!-- From: file:/home/sharan/AndroidStudioProjects/Muser/muser/src/main/res/layout/other_chat.xml -->