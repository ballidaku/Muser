	    <Button
	        android:id="@+id/yes"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:textColor="#33b5e5"
	        android:layout_marginTop="2dp"
	         android:background="#fff"
