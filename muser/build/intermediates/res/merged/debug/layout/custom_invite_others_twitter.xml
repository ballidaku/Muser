<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp" >

    <com.example.classes.RoundedCornersGaganImg
        android:id="@+id/image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/loading_image"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="3dp"
        android:text="Dannie Dee"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_14"
        android:textColor="@android:color/black" />
    
    
    <ImageView
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/check_box" />

</LinearLayout><!-- From: file:/home/sharan/AndroidStudioProjects/Muser/muser/src/main/res/layout/custom_invite_others_twitter.xml -->