            android:visibility="visible" />
    </LinearLayout>

    
             <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/friends_listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible" />
   

</LinearLayout>
