<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/top_bar"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image_btn_cross"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/desc"
            android:padding="15dp"
            android:src="@drawable/cross_btn" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/White" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Get Started"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/White"
            android:textStyle="bold" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/White" />

        <ImageView
            android:id="@+id/image_btn_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:contentDescription="@string/desc"
            android:padding="15dp"
            android:src="@drawable/right_btn" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical"
            android:weightSum="10" >

            <com.example.classes.RoundedCornersGaganImg
                android:id="@+id/profile_pic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/add_img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="@drawable/abs__textfield_search_default_holo_light"
                    android:drawableLeft="@drawable/email_icon"
                    android:drawablePadding="5dp"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/text_size_14">
                </EditText>

                <EditText
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/abs__textfield_search_default_holo_light"
                    android:drawableLeft="@drawable/user_name"
                    android:drawablePadding="5dp"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="Username"
                    android:inputType="textCapSentences"
                    android:maxLength="30"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM1234567890_"
                    android:textSize="@dimen/text_size_14" >
                </EditText>

                <EditText
                    android:id="@+id/full_name"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/abs__textfield_search_default_holo_light"
                    android:drawableLeft="@drawable/user_name"
                    android:drawablePadding="5dp"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="Full Name"
                    android:inputType="textCapSentences"
                    android:maxLength="30"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/text_size_14" >
                </EditText>

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/abs__textfield_search_default_holo_light"
                    android:drawableLeft="@drawable/password"
                    android:drawablePadding="5dp"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/text_size_14" >
                </EditText>

                <EditText
                    android:id="@+id/confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/abs__textfield_search_default_holo_light"
                    android:drawableLeft="@drawable/password"
                    android:drawablePadding="5dp"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/text_size_14" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Membership Type:"
                        android:textColor="#000"
                        android:textSize="@dimen/text_size_14"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/user_lay"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:background="@drawable/user_white_bg"
                        android:gravity="center" >

                        <TextView
                            android:id="@+id/user_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/trainer_lay"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:background="@drawable/trainer_coloured_bg"
                        android:gravity="center" >

                        <TextView
                            android:id="@+id/trainer_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Trainer" />
                    </LinearLayout>





                </LinearLayout>


                <EditText
                    android:id = "@+id/edtxt_paypalid"
                    android:layout_width = "match_parent"
                    android:layout_height = "32dp"
                    android:layout_marginLeft = "10dp"
                    android:layout_marginRight = "10dp"
                    android:background = "@drawable/abs__textfield_search_default_holo_light"
                    android:drawableLeft = "@drawable/paypal_icon"
                    android:drawablePadding = "8dp"
                    android:ems = "10"
                    android:gravity = "center_vertical"
                    android:hint = "Paypal ID"
                    android:paddingLeft="15dp"
                    android:paddingRight="5dp"
                    android:enabled="false"
                    android:inputType = "textEmailAddress"
                    android:textColorHint = "@color/Gray"
                    android:visibility="gone"
                    android:textSize = "@dimen/text_size_14"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Privacy Type:"
                        android:textColor="#000"
                        android:textSize="@dimen/text_size_14"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/public_lay"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:background="@drawable/user_white_bg"
                        android:gravity="center" >

                        <TextView
                            android:id="@+id/public_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Public" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/private_lay"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:background="@drawable/trainer_coloured_bg"
                        android:gravity="center" >

                        <TextView
                            android:id="@+id/private_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Private" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/optional_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="Optional Info"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/optional_fb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/divider_line_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <!--
                             <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/fb_icon"
                            android:contentDescription="@string/desc" />
                        -->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/fb_icon"
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical"
                            android:text="Use Your Facebook Info"
                            android:textColor="#000"
                            android:textSize="@dimen/text_size_14" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/divider_line_color" />

                    <EditText
                        android:id="@+id/optional_fb_name"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/abs__textfield_search_default_holo_light"
                        android:drawableLeft="@drawable/name_icon"
                        android:drawablePadding="5dp"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint="Name"
                        android:inputType="text"
                        android:maxLength="20"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:textSize="@dimen/text_size_14" >
                    </EditText>

                    <EditText
                        android:id="@+id/optional_fb_phone"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_margin="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/abs__textfield_search_default_holo_light"
                        android:drawableLeft="@drawable/phn_no"
                        android:drawablePadding="5dp"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint="Phone"
                        android:inputType="phone"
                        android:maxLength="15"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:textSize="@dimen/text_size_14">
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/optional_tw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/divider_line_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <!--
                             <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/insta_icon"
                            android:contentDescription="@string/desc" />
                        -->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/twitter_icon"
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical"
                            android:text="Use Your Twitter Info"
                            android:textColor="#000"
                            android:textSize="@dimen/text_size_14" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/divider_line_color" />

                    <EditText
                        android:id="@+id/optional_tw_name"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/abs__textfield_search_default_holo_light"
                        android:drawableLeft="@drawable/name_icon"
                        android:drawablePadding="5dp"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint="Name"
                        android:inputType="text"
                        android:maxLength="20"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:textSize="@dimen/text_size_14" >
                    </EditText>

                    <EditText
                        android:id="@+id/optional_tw_phone"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_margin="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/abs__textfield_search_default_holo_light"
                        android:drawableLeft="@drawable/phn_no"
                        android:drawablePadding="5dp"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint="Phone"
                        android:inputType="phone"
                        android:maxLength="15"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:textSize="@dimen/text_size_14" >
                    </EditText>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/optional_ig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/divider_line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <!--
                             <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/insta_icon" 
                            android:contentDescription="@string/desc"/>
                    -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/insta_icon"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="Use Your Instagram Info"
                        android:textColor="#000"
                        android:textSize="@dimen/text_size_14" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/divider_line_color" />

                <EditText
                    android:id="@+id/optional_ig_name"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/abs__textfield_search_default_holo_light"
                    android:drawableLeft="@drawable/name_icon"
                    android:drawablePadding="5dp"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="Name"
                    android:inputType="textCapSentences"
                    android:maxLength="20"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/text_size_14" >
                </EditText>

                <EditText
                    android:id="@+id/optional_ig_phone"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/abs__textfield_search_default_holo_light"
                    android:drawableLeft="@drawable/phn_no"
                    android:drawablePadding="5dp"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="Phone"
                    android:inputType="phone"
                    android:maxLength="15"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/text_size_14" >
                </EditText>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_discription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/home/sharan/AndroidStudioProjects/Muser/muser/src/main/res/layout/activity_registration.xml -->